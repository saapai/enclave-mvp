# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here

# Supabase Database
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Mistral AI
MISTRAL_API_KEY=your_mistral_api_key_here

# Feature Flags
USE_PLANNER=false  # Enable new planner-based SMS flow (Poke-like)
USE_RERANKING=false  # Enable BM25+Vector fusion with time decay + authority

# Internal API Key (for consolidation worker)
INTERNAL_API_KEY=your_random_secret_key_here

# Twilio SMS
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# Slack Integration (Optional)
SLACK_CLIENT_ID=your_slack_client_id_here
SLACK_CLIENT_SECRET=your_slack_client_secret_here

# Environment
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Optional: Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_vercel_analytics_id_here

# Airtable Integration (for Poll Responses)
AIRTABLE_API_KEY=pat_your_airtable_api_key_here
AIRTABLE_BASE_ID=app_...  # Base ID from Airtable
AIRTABLE_TABLE_ID=tbl_...  # Table ID for Metadata API (get from Airtable URL: https://airtable.com/{BASE_ID}/{TABLE_ID}/...)
AIRTABLE_TABLE_NAME=Enclave RSVP  # Table name
AIRTABLE_PUBLIC_RESULTS_URL=@https://airtable.com/app_.../tbl_...  # Public view link (optional)


